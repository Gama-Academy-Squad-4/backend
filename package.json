{
	"name": "apibitcoin",
	"version": "1.0.0",
	"scripts": {
		"start": "nodemon src/server.js",
		"deploy": "node src/server.js",
		"debug": "node --inspect ./node_modules/serverless/bin/serverless offline start",
		"test": "cross-env NODE_ENV=test standard && jest --env=node --detectOpenHandles --runInBand --forceExit --verbose",
        "lint": "eslint .",
		"my-test": "NODE_ENV=test standard && jest --env=node --detectOpenHandles --forceExit",
		"win-my-test": "NODE_ENV=test standard && jest --env=node --detectOpenHandles --forceExit",
		"docs": "npm run docs:mkdir && npm run docs:open-api && npm run docs:html",
		"docs:open-api": "swagger-jsdoc -o ./public/definition.json -d openApiDefs.js ./src/handlers/**/**.js ./lib/**/**.js",
		"docs:html": "redoc-cli bundle ./public/definition.json -o ./public/index.html",
		"docs:mkdir": "mkdirp public"
	},
	"standard": {
		"globals": [
			"describe",
			"beforeAll",
			"test",
			"jest",
			"it",
			"expect",
			"afterAll",
			"beforeEach",
			"afterEach"
		]
	},
	"devDependencies": {
		"axios-mock-adapter": "^1.20.0",
		"cross-env": "^7.0.3",
		"eslint": "^7.32.0",
		"eslint-config-standard": "^16.0.3",
		"eslint-plugin-import": "^2.25.2",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^5.1.1",
		"jest": "^27.0.4",
		"mongodb-memory-server": "^6.9.6",
		"redoc-cli": "^0.12.1",
		"swagger-jsdoc": "^6.1.0"
	},
	"dependencies": {
		"axios": "^0.21.4",
		"body-parse": "^0.1.0",
		"colors": "^1.4.0",
		"cors": "^2.8.5",
		"crypto": "^1.0.1",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"jsonwebtoken": "^8.5.1",
		"moment": "^2.22.2",
		"moment-duration-format": "^2.3.2",
		"moment-timezone": "^0.5.33",
		"mongoose": "^6.0.7",
		"node-fetch": "^2.6.1",
		"nodemon": "^2.0.7",
		"standart": "^6.1.0",
		"supertest": "^5.0.0",
		"unsplash-js": "^7.0.11",
		"uuid": "^3.4.0",
		"xml2js": "^0.4.23"
	}
}
